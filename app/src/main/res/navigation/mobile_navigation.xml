<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.goga133.oknaservice.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_auth"
        android:name="com.goga133.oknaservice.ui.auth.AuthFragment"
        android:label="@string/menu_auth"
        tools:layout="@layout/fragment_auth"/>
    <fragment
        android:id="@+id/nav_personal"
        android:name="com.goga133.oknaservice.ui.personal_cab.PersonalCabFragment"
        android:label="Личный кабинет"
        tools:layout="@layout/fragment_personal"/>
    <fragment
        android:id="@+id/nav_auth_input_phone"
