        tools:layout="@layout/fragment_lead" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.goga133.oknaservice.ui.contacts.ContactsFragment"
        android:label="@string/menu_contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/nav_info"
        android:name="com.goga133.oknaservice.ui.info.InfoFragment"
        android:label="@string/menu_company"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.goga133.oknaservice.ui.info.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

