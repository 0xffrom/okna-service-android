<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="16dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/title_image"
                android:layout_width="120dp"
                app:shapeAppearanceOverlay="@style/model_sales_imageView"
                android:src="@drawable/home_phone_girl"
                android:layout_alignParentStart="true"
                android:layout_height="120dp"/>

            <TextView
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/title_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/title_image"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Скидки всем студентам на москитные сетки!" />
        </LinearLayout>

        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ну всем челиком из общаг скидоны"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:paddingRight="15dp"
            android:textStyle="italic"
            android:textSize="10sp"
            android:text="18.01.2001"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>