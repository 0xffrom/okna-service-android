<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_dialog_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Длина окна (от 1 до 20):"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dialog_input_value_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Значение от 1 до 20"/>
    <TextView
        android:id="@+id/text_view_dialog_width"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Высота окна (от 1 до 20):"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dialog_input_value_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Значение от 1 до 20"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_button_set"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_success"
        android:layout_height="wrap_content"/>
</LinearLayout>